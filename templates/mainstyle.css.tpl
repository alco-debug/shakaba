#postarea table{margin:0 auto;text-align:left}
#postarea,.login{text-align:center}
.abbrev{color:#707070}
.adminbar{clear:both;display:block;text-align:center}
.bold{font-weight: bold}
.doubledash{clear:both;float:left;vertical-align:top}
.filesize{text-decoration:none}
.filetitle{background:inherit;color:#9b67e0;font-size:1.2em}
.floatpost{clear:both;float:right}
.footer{clear:both;font-family:serif;font-size:12px;text-align:center}
.highlight{background:#F0E0D6;border:2px dashed #EA8;color:maroon}
.italic{font-style: italic}
.logo{clear:both;color:#666;font-size:2em;text-align:center;width:100%;margin:10px auto;}
.managebutton{font-size:15px;height:28px;margin:.2em}
.menu{display: none; position: fixed; left:0%; top: 5%; width:10%; background:rgba(0,0,0,0.5); text-align: center; font-size: 9pt;}
.menubutton{display: block; position: fixed; left:0%; top: 0%; width:10%; height:5%; background:rgba(0,0,0,0.5); text-align: center;}
.menubutton:hover .menu{display: block;}
.moderator{color:#fff; background:#9b67e0}
.monotype{font-family: "Liberation Mono", "Ubuntu Mono", "Courier New", Courier, "Lucida Console", mono}
.navbutton{display: block; position: fixed; left:95%; width:5%; background:rgba(0,0,0,0.5); text-align: center;}
#navbutton_top{top: 15%;}
#navbutton_bottom{top: 85%;}
.nothumb{background:#eee;border:2px dashed #aaa;float:left;margin:2px 20px;padding:1em .5em;text-align:center}
.omittedposts{color:#707070;font-style:italic}
.postblock{color:#ccc;font-size:12pt;font-weight:100;text-align:right}
.postername,.commentpostername{color:#9b67e0}
.postertrip{color:#9b67e0}
.reply{background:rgba(20,20,20,0.5);border:1px dashed #666;border-radius:2px;max-width:80%;padding:4px;word-wrap:break-word}
.reply .filesize{margin-left:20px}
.replyhl{background:#F0C0B0;color:maroon}
.replylink{float:right}
.replymode{background:#E04000;color:#FFF;padding:2px;text-align:center;width:100%}
.replytitle{color:#CC1105;font-size:1.2em}
.row1{background:#EEC;color:maroon}
.row2{background:#DDA;color:maroon}
.rules{font-size:6px;text-align:justify;width:30%}
.rules ul{margin:0;padding-left:0}
.servicemsg{
    font-size: 12pt;
    display:block;
    width: 50%;
    height: 50%;
    text-align:center;
    margin: 25% auto 0 auto;
    background:rgba(255, 255, 255, .1);
    border-width: 1pt;
    border-style: dashed;
}
.delpost{
    color:#ccc;
}
.spoiler{background-color:#CCC;color:#CCC}
.spoiler:hover{background-color:rgba(0,0,0,0);color:inherit}
.strike{text-decoration: line-through}
.thumb{border:none;float:left;margin:2px 20px}
.thumbnailmsg{color:maroon;font-size:small}
.unkfunc{background:inherit;color:#789922}
.underline{border-bottom: 1px solid}
a,a{color:#9b67e0;text-decoration:none}
a:hover{color:#fff;text-decoration:underline}
blockquote{word-wrap: break-word;}
blockquote blockquote{margin-left:0; word-wrap: break-word;}
body{color:#CCC;font-weight:100;margin:auto;width:90%}
form,.reply blockquote,blockquote :last-child{margin-bottom:0;}
h3{margin: 0, 0, 0, 0; padding: 0, 0, 0, 0;}
